{
  "name": "applecreditbot",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "db:migrate": "dotenv -- bun --cwd packages/core migrate",
    "db:generate": "dotenv -- bun --cwd packages/core generate",
    "db:studio": "bunx dotenv -- bun --cwd packages/core studio",
    "bot:dev": "bunx dotenv -- bun --cwd apps/bot dev",
    "bot:start": "bunx dotenv -- bun --cwd apps/bot start",
    "web:dev": "bunx dotenv -- bun --cwd apps/web dev",
    "web:start": "bunx dotenv -- bun --cwd apps/web start"
  },
  "dependencies": {
    "dotenv-cli": "^7.4.2",
    "fast-xml-parser": "^5.2.5"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
